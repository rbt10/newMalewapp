{% extends 'base.html.twig' %}

{% block title %}Réinitialiser votre mot de passe{% endblock %}

{% block body %}

    <div class="container padding-300">
        {% for flash_error in app.flashes('reset_password_error') %}
            <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
        {% endfor %}
        <h1>Réinitialiser votre mot de passe</h1>
        <div class="row">
            <div class="text-center">
                <small>
                    Entrez votre adresse e-mail et nous vous enverrons un
                    lien pour réinitialiser votre mot de passe.
                </small>
            </div>
            {{ form_start(requestForm) }}
            {{ form_row(requestForm.email) }}
                <button class="btn btn-dark text-center rounded-pill w-50">Envoyer l'email de réinitialisation de mot de passe</button>
            {{ form_end(requestForm) }}

        </div>
    </div>
{% endblock %}
