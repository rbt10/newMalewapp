{% extends 'base.html.twig' %}

{% block title %}Nous Contacter - Malewapp{% endblock %}

{% block body %}
    <div class="header-contact padding-50 h-100">
        <div class="container d-flex justify-content-center align-item-center ">
            <div class="row p-3 rounded-pill-login rounded-5 mb-5 ">
                <div class="col-md-6 d-none d-sm-block">
                    <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d127297.67665199215!2d15.240171130964372!3d-4.401299197208443!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x1a6a3130fe066a8b%3A0x168b7e4e1f52378d!2sKinshasa%2C%20R%C3%A9publique%20d%C3%A9mocratique%20du%20Congo!5e0!3m2!1sfr!2sfr!4v1691485405034!5m2!1sfr!2sfr"
                            width="100%" height="100%" style="border:0;" allowfullscreen="" loading="lazy" class="rounded-5"
                            referrerpolicy="no-referrer-when-downgrade">
                    </iframe>
                </div>
                <div class="col-md-6 col-12 text-white mt-5 mt-sm-0  rounded-5 shadow p-3 bg-orange">
                    <h1 class="fw-lighter">Contacter-nous</h1>
                    {% for message in app.flashes('success') %}
                        <div class="alert alert-success mt-4">{{ message }}</div>
                    {% endfor %}
                    <p class ="fw-light">N'hésitez pas à prendre contact avec notre équipe, nous vous repondrons dans les meilleurs delais</p>
                    {{ form_start(form) }}
                    {{ form_row(form.prenom) }}

                    {{ form_row(form.email) }}
                    {{ form_row(form.Message) }}

                    <button class ="btn rounded-pill bg-orange float-end mb-4" type="submit" id="myButton">Envoyer</button>
                    {{ form_end(form) }}
                </div>
            </div>

        </div>
    </div>



{% endblock %}
