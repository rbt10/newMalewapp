{% extends 'base.html.twig' %}

{% block title %}Categorie{% endblock %}

{% block body %}


<div class="container">
    <h1>{{ category.libelle }}</h1>
    <p>Cette categorie contient {{ category.recettes|length }} recettes</p>

    <div class="row">
        {% for recette in category.recettes %}
            <div class="col-md-3">
                <img src="/uploads/{{ recette.photo }}" alt="" class="img-fluid">
                <strong>{{ recette.libelle }}</strong>
            </div>
        {% endfor %}
    </div>
</div>
{% endblock %}
